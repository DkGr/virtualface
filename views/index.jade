extends layout

block content
  if (!user)
    .navbar-wrapper
      .container
        .navbar.navbar-inverse.navbar-static-top( style="border-radius: 4px;" role="navigation" )
          .container
            .navbar-header
              a.navbar-brand( style="color: #fff;font-size: 20px;padding: initial;" href="#" )
                img( style="height: inherit;" alt="VirtualID" src="#{config.appRootFolder}/images/virtualid-white.png" )
            .navbar-collapse.collapse
              ul.nav.navbar-nav.navbar-right
    .container
      .jumbotron( style="max-width:800px;margin:auto;padding:0px;" )
          img( style="margin-left: -20px;" alt="VirtualID" src="#{config.appRootFolder}/images/virtualid-black.png" )
          p.lead Le réseau social
            b  libre
            |  et
            b  crypté
            |  qui respecte votre vie privée !
          ul
            li
              b Pas de revente
              |  de vos informations
            li
              b Pas de traçage
              |  publicitaire
            li Toutes vos
              b  données privées
              |  sont
              b  cryptées
              |  (Informations personnelles, Messages privés, Photos,...)
    form.form-signin(role="form", action="#{config.appRootFolder}/login", method="post")
      h2.form-signin-heading Connectez vous !
      .form-group
        input.form-control(name="username" type="username" placeholder="Nom d'utilisateur" title="Peut contenir des caractères alpha-numériques en minuscule (0 à 9 et a à z), des tirets (-), des underscores (_) ou des points (.)" pattern="[a-z0-9]+[a-z0-9._-]+[a-z0-9]+" required autofocus)
      .form-group
        input.form-control(name="password" type="password" placeholder="Mot de passe" required)
      if (error && error.length > 0)
        br
        .error-msg(style="color:red;")= error
        br
      button.btn.btn-primary(name="login" value="login" type="submit") Connexion
      &nbsp;
      a(href="#{config.appRootFolder}/register")
        button.btn.btn-default(type="button") Inscription
      if(config.useFacebook)
        br
        a(href="#{config.appRootFolder}/auth/facebook")
          button.btn.btn-default(type="button" style="background-color: #4267b2;color: #fff;border-color: #4267b2;margin-top: 5px;") Se connecter avec Facebook
    footer.footer
      div(style="float:left;margin:25px;position:fixed;bottom:0px;")
        hr(style="border-top: 1px solid #DADADA;")
        |Ce projet est distribué sous licence GNU GPL v2.
        br
        |Le code source est disponible sur
        a(href="https://github.com/DkGr/virtualid")  Github
        a(href="https://github.com/DkGr/virtualid")
          img(style="width: 32px;margin-left:3px;" alt="github-icon" src="#{config.appRootFolder}/images/mark-github-512.png")
